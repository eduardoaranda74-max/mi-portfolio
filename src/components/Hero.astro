---
import { Image } from 'astro:assets';
import profilePhoto from '../assets/profile.jpg';
---

<section class="relative min-h-screen flex items-center overflow-hidden bg-slate-950 text-white">
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ea580c&quot; fill-opacity=&quot;0.4&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      
      <div class="space-y-6">
        <span class="inline-block text-orange-500 font-medium text-xl animate-fade-in">ðŸ‘‹ Hola, soy</span>
        
        <h1 class="text-5xl md:text-7xl font-extrabold leading-tight">
          Eduardo <span class="text-orange-500">Aranda</span>
        </h1>
        
        <h2 class="text-2xl md:text-3xl font-semibold text-slate-300">
          Desarrollador Full Stack
        </h2>
        
        <p class="text-lg md:text-xl text-slate-400 leading-relaxed max-w-xl">
          Creo experiencias web modernas y funcionales usando React, Next.js y Python. 
          Apasionado por resolver problemas y construir productos que impacten.
        </p>
        
        <div class="flex flex-wrap gap-4 pt-4">
          <a href="#proyectos" class="px-8 py-4 bg-orange-600 text-white rounded-lg font-semibold hover:bg-orange-700 hover:shadow-[0_0_20px_rgba(234,88,12,0.4)] transition-all duration-300">
            Ver Proyectos
          </a>
          <a href="#contacto" class="px-8 py-4 border-2 border-orange-600 text-orange-600 rounded-lg font-semibold hover:bg-orange-600 hover:text-white transition-all duration-300">
            Contactar
          </a>
        </div>
      </div>

      <div class="relative lg:block hidden">
        <div class="relative w-full max-w-lg mx-auto">
          <div class="absolute inset-0 bg-orange-600 rounded-full blur-[100px] opacity-20 animate-pulse"></div>
          
          <div class="relative z-10">
            <Image 
              src={profilePhoto} 
              alt="Eduardo Aranda" 
              class="w-full h-auto rounded-full border-4 border-orange-600/30 shadow-2xl object-cover aspect-square"
            />
          </div>
        </div>
      </div>

    </div>
  </div>
</section>