---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-slate-950 min-h-screen relative">
  <div class="fixed inset-0 z-0 opacity-20 pointer-events-none" 
       style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ea580c&quot; fill-opacity=&quot;0.4&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');">
  </div>

  <div class="fixed -top-24 -left-24 w-96 h-96 bg-orange-600/10 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
  <div class="fixed top-1/2 -right-24 w-80 h-80 bg-orange-500/10 rounded-full blur-[120px] pointer-events-none animate-pulse delay-700"></div>

  <div class="relative z-10">
    <slot />
  </div>
</body>
</html>

<style is:global>
	html, body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>