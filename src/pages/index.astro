---
import Layout from '../layouts/Layout.astro';
import ProjectFilters from '../components/ProjectFilters.jsx';
import Contact from '../components/Contact.jsx'; // Asegúrate de que esté importado

const proyectos = [
    { title: "E-commerce Zen", description: "Tienda online...", tags: ["React", "Next.js"] },
    { title: "AI Chatbot", description: "Asistente...", tags: ["Python", "OpenAI"] },
    { title: "Crypto Dash", description: "Panel...", tags: ["React", "TypeScript"] }
];
---

<Layout title="Mi Portfolio">
    <main class="bg-slate-950 min-h-screen">
        <h1 class="text-white text-center pt-20 text-4xl font-bold">Mis <span class="text-orange-500">Proyectos</span></h1>
        
        <div class="py-10">
            <ProjectFilters initialProjects={proyectos} client:load />
        </div>

        <div class="py-20">
            <Contact client:visible />
        </div>
    </main>
</Layout>