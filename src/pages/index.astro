---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Skills from '../components/Skills.astro';
import ProjectFilters from '../components/ProjectFilters.jsx';
import Contact from '../components/Contact.jsx';

const proyectos = [
    { title: "E-commerce Zen", description: "Tienda online...", tags: ["React", "Next.js"] },
    { title: "AI Chatbot", description: "Asistente...", tags: ["Python", "OpenAI"] },
    { title: "Crypto Dash", description: "Panel...", tags: ["React", "TypeScript"] }
];
---

<Layout title="Eduardo Aranda - Portfolio">
    <!-- Hero Section -->
    <Hero />

    <!-- About Section -->
    <About />

    <!-- Skills Section -->
    <Skills />

    <!-- Projects Section -->
    <main id="proyectos" class="bg-slate-950 py-20">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <span class="text-orange-500 font-semibold text-sm uppercase tracking-wider">Mi Trabajo</span>
                <h2 class="text-4xl md:text-5xl font-bold text-white mt-2">
                    Mis <span class="text-orange-500">Proyectos</span>
                </h2>
            </div>
            
            <ProjectFilters initialProjects={proyectos} client:load />
        </div>
    </main>

    <!-- Contact Section -->
    <div id="contacto" class="bg-slate-900 py-20">
        <Contact client:visible />
    </div>
</Layout>